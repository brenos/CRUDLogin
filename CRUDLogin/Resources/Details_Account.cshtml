@model {0}.Models.LoginModel

@{
    ViewBag.Title = "Usuário";
}

<h2>Details</h2>

<div>
    <h4>Usuário</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>@Html.DisplayNameFor(model => model.Name)</dt>
        <dd>@Html.DisplayFor(model => model.Name)</dd>
        <dt>@Html.DisplayNameFor(model => model.UserName)</dt>
        <dd>@Html.DisplayFor(model => model.UserName)</dd>
        <dt>@Html.DisplayNameFor(model => model.Email)</dt>
        <dd>@Html.DisplayFor(model => model.Email)</dd>
        <dt>@Html.Label("Perfil")</dt>
        <dd>
            @foreach (var role in Roles.GetAllRoles())
            {
                if (Roles.FindUsersInRole(role, Model.UserName).Length > 0)
                {
                    @Html.DisplayName(role);
                }
            }
        </dd>
        <dt>@Html.DisplayNameFor(model => model.NOME)</dt>
        <dd>@Html.DisplayFor(model => model.NOME)</dd>
    </dl>
</div>
<p>
    @Html.ActionLink("Alterar", "Edit", new { username = Model.UserName }) |
    <!-- Criar regra para aparecer o botão -->
    @Html.ActionLink("Alterar Senha", "ResetPassword", new { username = Model.UserName }) |
    @Html.ActionLink("Voltar", "Index")
</p>