@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>{0} - Recuperar Senha</title>
    <!-- Tell the browser to be responsive to screen width -->
    <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">
</head>
<body>
    <h2>{1}</h2>
    <p class="login-box-msg">Digite seu usuário e senha para receber um email com uma nova senha.</p>
    @using (Html.BeginForm("Forgot", "Account", FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true)
        <div class="form-group">
            @Html.TextBox("UserId", null, new { @class = "form-control", @placeholder = "Usuario" })
        </div>
        <div class="form-group">
            @Html.TextBox("UserEmail", null, new { @class = "form-control", @placeholder = "Email" })
        </div>
        <div class="form-group">
            @Html.ActionLink("Já sou usuário.", "Login", null, new { @class = "text-center" })
        </div>
        <div class="col-xs-4">
            <button type="submit" class="btn btn-primary btn-block btn-flat">Enviar</button>
        </div>
    }
</body>
</html>